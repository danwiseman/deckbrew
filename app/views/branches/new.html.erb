

<%= form_with model: @branch, class: "form", url: "/decks/#{@master_deck.slug}/branch" do |f| %>
  <div class="form-group">
    <label for="branched_from">Branch From</label>
    <%= select("branched_from", "branched_from_id", @current_branches.collect {|b| [ b.name, b.id ] },
              { include_blank: false },
                :class => "form-control selectpicker", :data_style => "btn btn-link" ) %>
  </div>
  <div class="form-group">
  <%= f.label "Branch Name:", for: :name %>
  <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
  <%= f.submit "Create" %>
  </div>
<% end %>

