<% content_for :body_style do %>
login-page
<% end %>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="card card-login card-hidden">
    <div class="card-header card-header-primary text-center">
      <h4 class="card-title">Login</h4>
    </div>
    <div class="card-body ">
      <span class="bmd-form-group">
        <div class="input-group">
          <div class="input-group-prepend">
            <span class="input-group-text">
              <i class="material-icons">face</i>
            </span>
          </div>
          <%= f.text_field :login, class: "form-control", placeholder: "User Name" %>
        </div>
      </span>
      <span class="bmd-form-group">
        <div class="input-group">
          <div class="input-group-prepend">
            <span class="input-group-text">
              <i class="material-icons">lock_outline</i>
            </span>
          </div>
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Password" %>
        </div>
      </span>  
      <% if devise_mapping.rememberable? %>
        <span class="bmd-form-group">
          <div class="form-check">
            <%= f.label :remember_me, class: "form-check-label" do %>
            <%= f.check_box :remember_me,  class: "form-check-input" %>
            Remember Me
            <span class="form-check-sign">
              <span class="check"></span>
            </span>
            <% end %>
          </div>
        </span>
      <% end %>
      <div class="card-footer justify-content-center">
        <%= f.submit "Log in",  class: "btn btn-primary btn-round" %>
      </div>

          <%= render "devise/shared/links" %>

      </div>
    </div>
  </div>          
<% end %>