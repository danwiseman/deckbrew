
<table class="table">
    <thead>
        <tr>
            <th>Deck Name</th>
            <th>Deck Type</th>
            <th>Colors</th>
            <th>Cost</th>
            <th class="text-right">Actions</th>
        </tr>
    </thead>
    <tbody>
      <% for master_deck in master_decks  %>
        <tr>
            
            <td><%= render partial: "master_decks/deck_link", locals: { master_deck: master_deck, deck_user: user } %></td>
            <td>commander</td>
            <td><%= prettyMtgText("{W}{B}") %></td>
            <td>$$$$</td>
            <td class="td-actions text-right">
                <button type="button" rel="tooltip" class="btn btn-info">
                    <i class="fa fa-copy"></i>
                </button>
                <button type="button" rel="tooltip" class="btn btn-success">
                    <i class="fa fa-heart"></i>
                </button>
                <button type="button" rel="tooltip" class="btn btn-danger">
                    <i class="fa fa-share-alt"></i>
                </button>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>