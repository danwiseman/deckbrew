<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:title) ? yield(:title) : "Deck Brew" %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
     <meta content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0" name="viewport" />
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "Deck Brew" %>">
    <script src="https://kit.fontawesome.com/166cb37d41.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Roboto+Slab:400,700|Material+Icons" />
    
    <link href="//cdn.jsdelivr.net/npm/keyrune@latest/css/keyrune.css" rel="stylesheet" type="text/css" />
    <link href="//cdn.jsdelivr.net/npm/mana-font@latest/css/mana.min.css" rel="stylesheet" type="text/css" />

    
    
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    
  
    <%= stylesheet_link_tag 'material-kit', media: 'all', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="<%= yield(:body_style) %>">
    <%= render 'layouts/navigation' %>
    <div class="page-header header-filter">
      <div class="container">
      <div class="row">
        <div class="col-lg-4 col-md-6 col-sm-8 ml-auto mr-auto">
          
          <% flash.each do |key, value| %>
            <div class="alert alert-<%= key %> alert-dismissible fade show" role="alert"><%= value %>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
            
            </div>
          
          <% end %>
          
          <%= content_for?(:content) ? yield(:content) : yield %>
          
          
        </div>
      </div>
    </div>
    </div>
    
    
    <%= render 'layouts/footer' %>
    <%= javascript_pack_tag 'core/jquery', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'core/popper', 'data-turbolinks-track': 'reload' %>
    
    <%= javascript_pack_tag 'core/bootstrap-material-design', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'plugins/moment', 'data-turbolinks-track': 'reload' %>
    
    <%= javascript_pack_tag 'plugins/jasny-bootstrap', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'plugins/bootstrap-datetimepicker', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'plugins/bootstrap-selectpicker', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'plugins/bootstrap-tagsinput', 'data-turbolinks-track': 'reload' %>
    <script async defer src="https://buttons.github.io/buttons.js"></script>
    <%= javascript_pack_tag 'material-kit', 'data-turbolinks-track': 'reload' %>
    
    
  </body>
</html>